<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.cneubauer.domain.bo.Creditor" table="creditor" lazy="false">
        <id name="id" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="name" column="Name" />
        <many-to-one name="legalPerson" class="de.cneubauer.domain.bo.LegalPerson" column="legalPerson_Id"/>
    </class>
</hibernate-mapping>