<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.cneubauer.domain.bo.LegalPerson" table="legalperson">
        <id name="id" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="isCompany" column="IsCompany" />
        <property name="companyName" column="CompanyName" />
        <property name="name" column="Name" />
        <property name="firstName" column="FirstName" />
        <property name="createdDate" column="CreatedDate" />
        <property name="modifiedDate" column="ModifiedDate" />
        <many-to-one name="corporateForm" class="de.cneubauer.domain.bo.CorporateForm" column="CorporateForm" fetch="join"/>
        <many-to-one name="address" class="de.cneubauer.domain.bo.Address" cascade="save-update" column="Address"/>
    </class>
</hibernate-mapping>