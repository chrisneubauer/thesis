<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.cneubauer.domain.bo.AccountingRecord" table="accountingRecord">
        <id name="id" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="entryDate" column="EntryDate" />
        <property name="documentNo" column="DocumentNo" />
        <property name="document" column="Document" />
        <property name="entryText" column="EntryText" />
        <property name="bruttoValue" column="BruttoValue" />
        <property name="vat_rate" column="Vat_Rate" />
        <property name="salesTaxId" column="SalesTaxID" />
        <many-to-one name="debit" class="de.cneubauer.domain.bo.Account" column="Debit_Account"/>
        <many-to-one name="credit" class="de.cneubauer.domain.bo.Account" column="Credit_Account"/>
    </class>
</hibernate-mapping>