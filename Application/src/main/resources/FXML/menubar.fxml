<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>

<MenuBar fx:id="menuBar" VBox.vgrow="NEVER" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="de.cneubauer.gui.controller.GUIController">
    <Menu mnemonicParsing="false" text="%menu.title.file">
        <MenuItem mnemonicParsing="false" text="%menu.title.preferences" onAction="#openSettings"/>
        <SeparatorMenuItem mnemonicParsing="false"/>
        <MenuItem mnemonicParsing="false" text="%menu.title.quit" onAction="#closeApplication"/>
    </Menu>
    <Menu mnemonicParsing="false" text="%menu.title.actions">
        <!--<MenuItem mnemonicParsing="false" text="%menu.title.start"/>-->
        <MenuItem mnemonicParsing="false" text="%menu.title.scan" onAction="#openStartMenu"/>
        <MenuItem mnemonicParsing="false" text="%menu.title.search" onAction="#openDatabaseMenu"/>
        <MenuItem mnemonicParsing="false" text="%menu.title.export" onAction="#openExportMenu"/>
    </Menu>
    <Menu mnemonicParsing="false" text="%menu.title.help">
        <MenuItem mnemonicParsing="false" text="%menu.title.help"/>
        <MenuItem mnemonicParsing="false" text="%menu.title.about"/>
    </Menu>
</MenuBar>