<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.cneubauer.gui.controller.GUIController">
    <stylesheets>
        <URL value="@BasicApplication.css"/>
    </stylesheets>
    <fx:include source="..\\FXML\\menubar.fxml"/>
    <ButtonBar buttonMinWidth="150.0" buttonOrder="U+FBIX_NCYOA_R" prefHeight="40.0" prefWidth="200.0">
      <buttons>
          <Button alignment="CENTER" mnemonicParsing="false" onAction="#openScanFormMenu" text="%mainMenu.button.scanForm"/>
          <Button mnemonicParsing="false" onAction="#openDatabaseMenu" text="%mainMenu.button.findInDatabase"/>
          <Button mnemonicParsing="false" text="%mainMenu.button.createReport"/>
      </buttons>
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </ButtonBar>
    <AnchorPane VBox.vgrow="ALWAYS">
        <fx:include source="splitPane.fxml" fx:id="splitPaneInclude"/>
    </AnchorPane>
</VBox>
