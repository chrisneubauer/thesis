<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.cneubauer.domain.bo.Invoice" table="invoice">
        <id name="id" column="Id" >
            <generator class="increment"/>
        </id>
        <property name="invoiceNumber" column="InvoiceNumber"/>
        <property name="issueDate" column="IssueDate" />
        <property name="lineTotal" column="LineTotal" />
        <property name="chargeTotal" column="ChargeTotal" />
        <property name="allowanceTotal" column="AllowanceTotal" />
        <property name="taxBasisTotal" column="TaxBasisTotal" />
        <property name="taxTotal" column="TaxTotal" />
        <property name="grandTotal" column="GrandTotal" />
        <property name="hasSkonto" column="HasSkonto" />
        <property name="skonto" column="Skonto" />
        <property name="createdDate" column="CreatedDate" />
        <property name="modifiedDate" column="ModifiedDate" />
        <many-to-one name="debitor" class="de.cneubauer.domain.bo.LegalPerson" cascade="save-update">
            <column name="Debitor"/>
        </many-to-one>
        <many-to-one name="creditor" class="de.cneubauer.domain.bo.LegalPerson" cascade="save-update">
            <column name="Creditor"/>
        </many-to-one>
    </class>
</hibernate-mapping>